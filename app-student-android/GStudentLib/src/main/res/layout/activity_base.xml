<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/vStatusBar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#70212121"
        />

    <RelativeLayout
        android:layout_below="@+id/vStatusBar"
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/white">

        <RelativeLayout
            android:id="@+id/rl_title_content"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginBottom="1dp"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <!--左边按钮-->
            <ImageView
                android:id="@+id/iv_title_left"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp"
                android:src="@drawable/gs_icon_back_blank_smooth"
                android:scaleType="fitCenter"
                android:visibility="invisible"/>

            <TextView
                android:id="@+id/tv_title_left"
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="50dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/iv_title_left"
                android:gravity="center"
                android:singleLine="true"
                android:ellipsize="end"
                android:text=""/>

            <!--标题栏-->
            <TextView
                android:id="@+id/tv_title_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:ellipsize="end"
                android:gravity="center"
                android:lines="1"
                android:paddingLeft="40dp"
                android:paddingRight="40dp"
                android:textColor="#d8000000"
                android:textSize="17sp" />

            <!--右边按钮-->
            <ImageView
                android:id="@+id/iv_title_right"
                android:layout_width="78dp"
                android:layout_height="26dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:visibility="invisible"/>

            <TextView
                android:id="@+id/tv_title_right"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:paddingRight="10dp"
                android:text="" />
            <!--右侧图标-->

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_navigate_cover"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#88000000"
            android:clickable="true"
            android:visibility="gone" />

    </RelativeLayout>
</RelativeLayout>
