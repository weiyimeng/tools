<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_title"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="24dp"
    android:paddingEnd="24dp">

    <TextView
        android:id="@+id/tv_login_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:text="设置新的密码"
        android:textStyle="bold"
        android:textColor="@color/text_black"
        android:textSize="24sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="32dp"
        android:gravity="center_vertical"
        android:background="@drawable/app_bg_login_input"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/edt_pass"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:hint="@string/update_pass_hint"
            android:inputType="textPassword"
            android:maxLength="16"
            android:paddingLeft="16dp"
            android:textColor="#1F243D"
            android:textColorHint="#A3B3C2"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/iv_clear_pass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:src="@drawable/ic_login_close"
            android:visibility="invisible" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:background="@drawable/app_bg_login_input"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/edt_pass2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:hint="@string/update_pass_again"
            android:inputType="textPassword"
            android:maxLength="16"
            android:paddingLeft="16dp"
            android:textColor="#1F243D"
            android:textColorHint="#A3B3C2"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/iv_clear_pass2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:src="@drawable/ic_login_close"
            android:visibility="invisible" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_login"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/app_login_shape_unenable"
        android:text="确认"
        android:textColor="@color/white"
        android:textSize="16sp" />

</LinearLayout>