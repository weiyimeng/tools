<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/srlayout_study"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_study"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />
    </android.support.v4.widget.SwipeRefreshLayout>

    <LinearLayout
        android:id="@+id/llTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:id="@+id/vStatusBar2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@android:color/transparent" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="10dp"
                android:text="@string/study_task"
                android:textColor="#1F243D"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/ivScan"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_marginTop="2dp"
                android:layout_toStartOf="@+id/rlMsg"
                android:layout_marginEnd="4dp"
                android:background="@drawable/ripple_corners_transparent"
                android:padding="8dp"
                android:src="@drawable/icon_scan" />

            <RelativeLayout
                android:id="@+id/rlMsg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="2dp">

                <ImageView
                    android:id="@+id/ivMsg"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:layout_marginEnd="12dp"
                    android:background="@drawable/ripple_corners_transparent"
                    android:padding="8dp"
                    android:src="@drawable/icon_msg" />

                <View
                    android:id="@+id/tvMsgCount"
                    android:layout_width="7dp"
                    android:layout_height="7dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/bg_red_dot"
                    android:gravity="center"
                    android:visibility="gone"/>
            </RelativeLayout>

        </RelativeLayout>

        <View
            android:id="@+id/topLine"
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:background="#F1F5F9"
            android:visibility="gone"/>
    </LinearLayout>

</RelativeLayout>
