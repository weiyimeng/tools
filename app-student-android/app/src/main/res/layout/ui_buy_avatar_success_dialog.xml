<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ivBg"
        android:layout_width="match_parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/ll"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_buy_avatar_success" />

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvAvatarTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="恭喜获得四字弟弟（7天）"
            android:maxLines="1"
            android:textColor="#FFFFFF"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/tvEndDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="2019.11.6到期"
            android:textColor="#C4C2C2"
            android:textSize="18sp" />

        <RelativeLayout
            android:id="@+id/rlAvatar"
            android:layout_width="146dp"
            android:layout_height="146dp"
            android:layout_marginTop="38dp"
            android:layout_marginBottom="68dp"
            android:background="@drawable/bg_header_white">

            <com.gstudentlib.view.RoundCornerImageView
                android:id="@+id/ivAvatar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_margin="7dp"
                android:src="@drawable/icon_default_placeholder"
                app:type="circle" />
        </RelativeLayout>

        <Button
            android:id="@+id/btnConfirm"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="236dp"
            android:layout_height="34dp"
            android:background="@drawable/bg_dress_save"
            android:gravity="center"
            android:text="确认"
            android:textColor="@color/white"
            android:textSize="14sp" />
    </LinearLayout>

</RelativeLayout>