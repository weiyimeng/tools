<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8FAFD">

    <com.gsbaselib.utils.title.TitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:divideVisibility="false"
        app:tvTitle="课程学习" />

    <LinearLayout
        android:background="@drawable/app_bg_white_lt_rt"
        android:id="@+id/llContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/title_bar"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <TextView
                android:paddingBottom="2dp"
                android:gravity="center_vertical"
                android:textStyle="bold"
                android:id="@+id/tvClassName"
                android:layout_marginTop="24dp"
                android:textColor="#1F243D"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingMultiplier="1.15"/>

            <TextView
                android:visibility="invisible"
                android:id="@+id/tvClassBeginTimeEndTime"
                android:drawablePadding="4dp"
                android:drawableStart="@drawable/app_icon_lessondetail_calendar"
                android:layout_marginTop="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="#A3B3C2"
                />

            <View
                android:visibility="invisible"
                android:id="@+id/vLine"
                android:layout_marginTop="22dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#F1F5F9"/>
            
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <android.support.design.widget.TabLayout
                android:layout_marginLeft="16dp"
                android:id="@+id/tlLessonNum"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                app:tabIndicatorColor="#1ED278"
                app:tabIndicatorHeight="3dp"
                app:tabPaddingEnd="-1dp"
                app:tabPaddingStart="-1dp"
                app:tabMaxWidth="0dp"
                app:tabGravity="fill"
                app:tabMode="scrollable"
                app:tabSelectedTextColor="#1ED278"
                app:tabTextColor="#78000000" />
            <ImageView
                android:visibility="invisible"
                android:id="@+id/ivMore"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="8dp"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/app_icon_lessondetail_more"
                />
        </LinearLayout>

        <android.support.v4.view.ViewPager
            android:id="@+id/vpContent"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            />

    </LinearLayout>

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/rlTreasureChest"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="45dp">

        <ImageView
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_centerInParent="true"
            android:scaleType="fitXY"
            android:src="@drawable/app_bg_lessondetail_gift" />

        <ImageView
            android:id="@+id/ivTreasureChest"
            android:layout_width="34dp"
            android:layout_height="32dp"
            android:layout_centerInParent="true"
            android:scaleType="fitXY"
            android:src="@drawable/app_icon_lessondetail_gift" />

        <gaosi.com.learn.view.GiftView
            android:id="@+id/gvTreasureChest"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_centerInParent="true" />
    </RelativeLayout>

    <gaosi.com.learn.view.AxxEmptyView
        android:elevation="1dp"
        android:id="@+id/mEmptyView"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>
