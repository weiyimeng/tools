<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_white_12dp"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        android:text="是否继续登录"
        android:textColor="#051535"
        android:textSize="16sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/ivHeader"
        android:layout_width="58dp"
        android:layout_height="58dp"
        android:layout_centerVertical="true"
        android:background="@drawable/bg_header_green"
        android:padding="2dp"
        android:src="@drawable/icon_default_header" />

    <TextView
        android:id="@+id/tvName"
        android:maxEms="8"
        android:lines="1"
        android:ellipsize="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:textColor="#051535"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvInstitutionName"
        android:maxLines="2"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="8dp"
        android:textSize="14sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#636B7B"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="已在其他端登录"
        android:textColor="#636B7B"
        android:textSize="12sp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="28dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvCancel"
            android:layout_width="112dp"
            android:layout_height="34dp"
            android:background="@drawable/bg_round_cancel_btn"
            android:gravity="center"
            android:text="否"
            android:textColor="@color/main_green_color"
            android:textSize="14sp" />

        <TextView
            android:layout_alignParentRight="true"
            android:id="@+id/tvConfirm"
            android:layout_width="112dp"
            android:layout_height="34dp"
            android:background="@drawable/bg_dress_save"
            android:gravity="center"
            android:text="是"
            android:textColor="@color/white"
            android:textSize="14sp" />
    </RelativeLayout>
</LinearLayout>