<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <com.gsbaselib.utils.title.TitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:divideVisibility="true" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/llFragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:visibility="invisible">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/icon_fragment" />

                <TextView
                    android:id="@+id/tvFragment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="8dp"
                    android:text="我的装扮碎片：30"
                    android:textColor="#636B7B"
                    android:textSize="16sp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/ivUrl"
                android:layout_width="168dp"
                android:layout_height="126dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:scaleType="fitCenter" />

            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textColor="#d8000000"
                android:textSize="24sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/ivLevel"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/icon_s" />

                    <TextView
                        android:id="@+id/tvLevelName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:textColor="#FF8F02"
                        android:textSize="16sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tvCountStr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:textColor="@drawable/text_color_countstr_selector"
                    android:textSize="16sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvFragmnetTips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:text="（30装扮碎片可合成）"
                android:textColor="@color/main_green_color"
                android:textSize="14sp"
                android:visibility="gone"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="26dp"
                android:layout_marginTop="40dp"
                android:drawablePadding="10dp"
                android:drawableStart="@drawable/icon_dress_story"
                android:text="装扮故事"
                android:textColor="#051535"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tvDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginTop="10dp"
                android:lineSpacingMultiplier="1.1"
                android:textColor="#636B7B"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvMergeFragment"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginEnd="44dp"
                android:layout_marginStart="44dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/bg_dress_save"
                android:gravity="center"
                android:text="@string/merge_fragment"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:visibility="gone"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
