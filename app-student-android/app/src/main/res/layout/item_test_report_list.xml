<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/ysf_white"
        app:cardPreventCornerOverlap="true"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="18dp"
            android:paddingBottom="18dp">

            <TextView
                android:id="@+id/tvClassName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="#E6051535"
                android:textSize="14sp"
                android:lineSpacingExtra="3dp"
                tools:text="高思数学六年级测试报告详情页面效高思数学六年级测试报告详情页面效" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivTeacherHeader"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    tools:src="@drawable/icon_default_header" />

                <TextView
                    android:id="@+id/tvTeacherName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:textColor="#9BA1AC"
                    android:textSize="12sp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    tools:text="James Ala" />
            </LinearLayout>


            <RelativeLayout
                android:id="@+id/rl_midterm"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@drawable/bg_gray_shape_8"
                android:layout_marginTop="16dp"
                android:paddingStart="16dp"
                android:paddingEnd="12dp"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/icon_lesson_math_test_report" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:textColor="#051535"
                        android:textSize="14sp"
                        android:text="@string/mid_test_report" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tv1"
                    android:layout_width="68dp"
                    android:layout_height="34dp"
                    android:background="@drawable/bg_dress_save"
                    android:gravity="center"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@+id/vTestReportNotify1"
                    android:layout_marginEnd="-6dp"
                    android:text="@string/go_check"
                    android:textColor="@color/white"
                    android:textSize="14sp"/>
                <View
                    android:id="@+id/vTestReportNotify1"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/notify_red_dot"
                    android:visibility="invisible" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_finalterm"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@drawable/bg_gray_shape_8"
                android:layout_marginTop="16dp"
                android:paddingStart="16dp"
                android:paddingEnd="12dp"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/icon_lesson_english_test_report" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:textColor="#051535"
                        android:textSize="14sp"
                        android:text="@string/final_test_report" />

                </LinearLayout>

                <TextView
                    android:layout_width="68dp"
                    android:layout_height="34dp"
                    android:background="@drawable/bg_dress_save"
                    android:gravity="center"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@+id/vTestReportNotify2"
                    android:layout_marginEnd="-6dp"
                    android:text="@string/go_check"
                    android:textColor="@color/white"
                    android:textSize="14sp"/>
                <View
                    android:id="@+id/vTestReportNotify2"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/notify_red_dot"
                    android:visibility="invisible" />

            </RelativeLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>