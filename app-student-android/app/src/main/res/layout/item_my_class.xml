<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:layout_marginBottom="20dp"
    app:cardBackgroundColor="@color/ysf_white"
    app:cardCornerRadius="12dp"
    app:cardElevation="0dp"
    app:cardPreventCornerOverlap="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingTop="24dp"
        android:paddingEnd="16dp"
        android:paddingBottom="24dp">

        <TextView
            android:id="@+id/tvClassName"
            android:paddingBottom="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:lineSpacingExtra="3dp"
            android:maxLines="2"
            android:textColor="#1F243D"
            android:textSize="14sp"
            android:textStyle="bold"
            tools:text="高思数学初一能力强化班" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/icon_more_lesson_clock" />

            <TextView
                android:id="@+id/tvDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:textColor="#A3B3C2"
                android:textSize="12sp"
                tools:text="2020年5月15日" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <RelativeLayout
                android:id="@+id/layout_teacher1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible">

                <ImageView
                    android:id="@+id/ivTeacherHead1"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/icon_default_placeholder" />

                <TextView
                    android:id="@+id/tvTeacherName1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_toEndOf="@+id/ivTeacherHead1"
                    android:ellipsize="end"
                    android:maxEms="4"
                    android:maxLines="1"
                    android:textColor="#474D6B"
                    android:textSize="12sp"
                    tools:text="王李天一…" />

                <TextView
                    android:id="@+id/tvTeacherType1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvTeacherName1"
                    android:layout_marginStart="8dp"
                    android:layout_toEndOf="@+id/ivTeacherHead1"
                    android:text="主讲"
                    android:textColor="#A3B3C2"
                    android:textSize="12sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_teacher2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_toEndOf="@+id/layout_teacher1"
                android:visibility="invisible">

                <ImageView
                    android:id="@+id/ivTeacherHead2"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/icon_default_placeholder" />

                <TextView
                    android:id="@+id/tvTeacherName2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_toEndOf="@+id/ivTeacherHead2"
                    android:ellipsize="end"
                    android:maxEms="4"
                    android:maxLines="1"
                    android:textColor="#474D6B"
                    android:textSize="12sp"
                    tools:text="王李天一…" />

                <TextView
                    android:id="@+id/tvTeacherType2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvTeacherName2"
                    android:layout_marginStart="8dp"
                    android:layout_toEndOf="@+id/ivTeacherHead2"
                    android:text="辅导"
                    android:textColor="#A3B3C2"
                    android:textSize="12sp" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/ivClassStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_start_class_label" />
        </RelativeLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>