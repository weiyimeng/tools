<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_white_12dp"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/ivClose"
            android:layout_alignParentRight="true"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:padding="12dp"
            android:src="@drawable/icon_notification_close"/>
    </RelativeLayout>

    <ImageView
        android:layout_marginTop="2dp"
        android:id="@+id/ivType"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/icon_notification" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="开启消息推送通知"
        android:textColor="#636B7B"
        android:textSize="16sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="查看学习内容"
        android:textColor="#9BA1AC"
        android:textSize="14sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="获取专属福利"
        android:textColor="#9BA1AC"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tvRightNowOpen"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="42dp"
        android:layout_marginRight="42dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_dress_save"
        android:gravity="center"
        android:text="@string/right_now_open"
        android:textColor="@color/white"
        android:textSize="14sp" />

</LinearLayout>