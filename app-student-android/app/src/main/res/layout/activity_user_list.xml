<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_loading"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8FAFD">

    <com.gsbaselib.utils.title.TitleBar
        android:visibility="invisible"
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:divideVisibility="false"
        app:tvTitle=""/>

    <android.support.v4.widget.SwipeRefreshLayout
        android:layout_below="@+id/title_bar"
        android:id="@+id/srRefresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include
                layout="@layout/header_user_list"/>

            <android.support.v7.widget.RecyclerView
                android:paddingTop="16dp"
                android:background="@drawable/app_bg_white_lt_rt"
                android:id="@+id/recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="none" />

        </LinearLayout>

    </android.support.v4.widget.SwipeRefreshLayout>

    <gaosi.com.learn.view.AxxEmptyView
        android:elevation="1dp"
        android:id="@+id/mEmptyView"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>
