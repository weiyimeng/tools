<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rlEnglishRecite"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:layout_marginBottom="16dp"
    android:visibility="gone">

    <ImageView
        android:id="@+id/ivEnglishRecite"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/icon_english_recite" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="12dp"
        android:layout_toEndOf="@+id/ivEnglishRecite"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="完成课文背诵"
            android:textColor="#1F243D"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/icon_task_gold" />

            <TextView
                android:id="@+id/tvEnglishReciteGold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:textColor="#A3B3C2"
                android:textSize="12sp"
                tools:text="+12" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tvToRecite"
        android:layout_width="64dp"
        android:layout_height="28dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:background="@drawable/bg_todo_task_button"
        android:gravity="center"
        android:text="去背诵"
        android:textColor="@color/white"
        android:textSize="12sp" />

</RelativeLayout>