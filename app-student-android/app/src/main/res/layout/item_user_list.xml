<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_marginBottom="8dp"
    android:layout_marginEnd="20dp"
    android:layout_marginStart="20dp"
    android:layout_marginTop="8dp"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="12dp"
    app:cardElevation="0dp"
    app:cardPreventCornerOverlap="true">

    <RelativeLayout
        android:id="@+id/rlUser"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/ivHeaderBg"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="12dp"
            />
        
        <ImageView
            android:layout_marginEnd="38dp"
            android:layout_alignParentRight="true"
            android:id="@+id/ivHeader"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:layout_centerVertical="true"
            android:background="@drawable/app_bg_header_default"
            android:padding="2dp"
            android:src="@drawable/icon_default_header" />

        <RelativeLayout
            android:layout_toLeftOf="@+id/ivHeaderBg"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp">

            <TextView
                android:id="@+id/tvName"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="#1F243D"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="年后霓虹弄离开分解反对法发打发打发打发啊打发"/>

            <TextView
                android:id="@+id/tvInstitutionName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvName"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="3dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="#474D6B"
                android:textSize="12sp"
                tools:text="今天天气好晴朗处处好风北京好风光晴好风光晴好风光晴好风光晴好风光晴朗处处好风光晴朗处处好风光" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/ivRight"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/app_icon_change_student_select"
            android:visibility="invisible" />

    </RelativeLayout>
</android.support.v7.widget.CardView>
