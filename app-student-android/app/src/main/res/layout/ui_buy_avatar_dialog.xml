<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/rl_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_white_12dp">

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@drawable/bg_buy_avatar_dialog_top" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rlAvatar"
                android:layout_width="146dp"
                android:layout_height="146dp"
                android:layout_marginTop="38dp"
                android:background="@drawable/bg_header_white">

                <com.gstudentlib.view.RoundCornerImageView
                    android:id="@+id/ivAvatar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:layout_margin="7dp"
                    android:src="@drawable/icon_default_placeholder"
                    app:type="circle" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tvPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:drawableStart="@drawable/icon_gold_mall_coin_small"
                android:drawablePadding="6dp"
                android:gravity="center_vertical"
                android:textColor="#FFC836"
                android:textSize="14sp"
                tools:text="150/7天" />

            <TextView
                android:id="@+id/tvRemainGold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="17dp"
                android:text="当前账户余额 3680 金币"
                android:textColor="#636B7B"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="是否确认购买？"
                android:textColor="#636B7B"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvConfirm"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="18dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/bg_dress_save"
                android:gravity="center"
                android:text="150 金币购买"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvCancel"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="18dp"
                android:background="@drawable/bg_go_extracting"
                android:gravity="center"
                android:text="@string/cancel"
                android:textColor="@color/main_green_color"
                android:textSize="16sp" />

        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>