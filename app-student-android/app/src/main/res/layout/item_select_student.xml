<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="82dp"
    android:layout_marginBottom="6dp"
    android:layout_marginEnd="18dp"
    android:layout_marginStart="18dp"
    android:layout_marginTop="6dp"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardBackgroundColor="#F5F7FB"
    app:cardCornerRadius="12dp"
    app:cardElevation="0dp"
    app:cardPreventCornerOverlap="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="82dp"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/ivHeader"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="24dp"
            android:background="@drawable/bg_header_green"
            android:padding="2dp"
            android:src="@drawable/icon_default_header" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="16dp"
            android:layout_toEndOf="@+id/ivHeader"
            android:layout_toStartOf="@+id/ivRight"
            android:gravity="center">

            <TextView
                android:id="@+id/tvName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="#636B7B"
                android:textSize="16sp"
                tools:text="赵择白" />

            <TextView
                android:id="@+id/tvInstitutionName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvName"
                android:layout_marginTop="4dp"
                android:textColor="#9BA1AC"
                android:textSize="12sp"
                tools:text="连江县新星教育培训中心中心连江县新星教sdsd育培星教育培心连江县新星教育培星教育培" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/ivRight"
            android:layout_width="21.5dp"
            android:layout_height="14.5dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="18dp"
            android:padding="2dp"
            android:src="@drawable/icon_right_white"
            android:visibility="invisible" />

    </RelativeLayout>
</android.support.v7.widget.CardView>
