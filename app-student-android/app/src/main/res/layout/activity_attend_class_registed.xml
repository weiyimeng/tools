<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_white_board_12dp"
    android:orientation="vertical">

    <TextView
        android:textStyle="bold"
        android:layout_margin="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="温馨提示"
        android:textSize="16sp"
        android:textColor="#051535"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:text="@string/class_phone_registed"
        android:textColor="#636B7B"
        android:textSize="14sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvConfirm"
            android:layout_width="0dp"
            android:layout_height="34dp"
            android:layout_weight="1"
            android:background="@drawable/corner_security_code"
            android:gravity="center"
            android:text="是"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <TextView
            android:layout_marginLeft="20dp"
            android:id="@+id/tvCancel"
            android:layout_width="0dp"
            android:layout_height="34dp"
            android:layout_weight="1"
            android:background="@drawable/bg_class_detail_submit"
            android:gravity="center"
            android:text="否"
            android:textColor="@color/main_green_color"
            android:textSize="14sp" />

    </LinearLayout>
</LinearLayout>