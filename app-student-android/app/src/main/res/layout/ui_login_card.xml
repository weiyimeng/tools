<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="52dp"
    android:layout_marginEnd="52dp">

    <LinearLayout
        android:id="@+id/llPhone"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/app_bg_login_input"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/edt_phone"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:hint="@string/login_or_register_phone_hint"
            android:inputType="phone"
            android:maxLength="11"
            android:paddingLeft="16dp"
            android:textColor="#1F243D"
            android:textColorHint="#A3B3C2"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/iv_clear_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dp"
            android:padding="16dp"
            android:src="@drawable/icon_login_close"
            android:visibility="gone" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llPassword"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@+id/llPhone"
        android:layout_marginTop="20dp"
        android:background="@drawable/app_bg_login_input"
        android:gravity="center_vertical">

        <EditText
            android:id="@+id/edt_pass"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:hint="@string/login_code_hint"
            android:inputType="textPassword"
            android:maxLength="16"
            android:paddingLeft="16dp"
            android:textColor="#1F243D"
            android:textColorHint="#A3B3C2"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_clear_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:src="@drawable/icon_login_close"
                android:visibility="gone" />

            <gaosi.com.learn.view.SecurityCodeView
                android:id="@+id/v_security_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_password_verification"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@+id/llPassword"
        android:layout_marginTop="20dp"
        android:background="@drawable/app_bg_login_input"
        android:gravity="center_vertical"
        android:visibility="gone">

        <EditText
            android:id="@+id/edt_password_verification"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:hint="@string/login_code_hint"
            android:inputType="textPassword"
            android:maxLength="16"
            android:paddingLeft="16dp"
            android:textColor="#1F243D"
            android:textColorHint="#A3B3C2"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_clear_password_verification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:src="@drawable/icon_login_close"
                android:visibility="gone" />

            <gaosi.com.learn.view.SecurityCodeView
                android:id="@+id/v_password_verification_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_tips_verification_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_password_verification"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="为了您的账号安全，本次登录需要输入手机验证码"
        android:textColor="#474D6B"
        android:textSize="13sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tvForgetPsw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_tips_verification_code"
        android:layout_alignParentRight="true"
        android:layout_gravity="end"
        android:background="@drawable/ripple_corners"
        android:gravity="center"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:text="@string/forget_password"
        android:textColor="#474D6B"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/btn_login"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_below="@+id/tv_tips_verification_code"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp"
        android:src="@drawable/app_icon_login_default" />

    <LinearLayout
        android:id="@+id/llAttendClassRoom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_login"
        android:layout_marginTop="60dp"
        android:background="@drawable/ripple_corners"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivAttendClassLabel"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginEnd="4dp"
            android:src="@drawable/app_icon_register_label" />

        <TextView
            android:id="@+id/tvAttendClassRoom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="没有账号？立即注册"
            android:textColor="#1ED278"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llOtherLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/llAttendClassRoom"
        android:layout_marginTop="36dp"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/other_login_type"
            android:textColor="#A3B3C2"
            android:textSize="14sp" />

        <LinearLayout
            android:id="@+id/llOneKeyLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/app_icon_one_key_login" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/one_key_login"
                android:textColor="#474D6B"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>