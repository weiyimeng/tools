<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <com.gsbaselib.utils.title.TitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:divideVisibility="false"
        app:tvTitle="添加学员信息"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="姓名"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="24dp"
            android:textSize="18sp"
            android:textColor="#051535"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="25dp"
            android:gravity="center_vertical"
            android:background="@drawable/bg_edit_corner">

            <EditText
                android:maxLength="50"
                android:singleLine="true"
                android:id="@+id/etName"
                android:background="@null"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:hint="请输入姓名"
                android:paddingLeft="16dp"
                android:textColor="#1F243D"
                android:textColorHint="#A3B3C2"
                android:textSize="14sp"/>

            <ImageView
                android:id="@+id/ivClearName"
                android:visibility="gone"
                android:padding="16dp"
                android:layout_marginRight="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_login_close" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="性别"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="25dp"
            android:textSize="18sp"
            android:textColor="@color/text_black"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/llMan"
                android:background="@drawable/ripple_corners"
                android:padding="24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                >
                <ImageView
                    android:id="@+id/ivClassMan"
                    android:layout_width="50dp"
                    android:layout_height="51dp"
                    android:src="@drawable/active_class_man"/>
                <TextView
                    android:id="@+id/tvClassMan"
                    android:textSize="16sp"
                    android:textColor="#4c00C2FF"
                    android:layout_marginTop="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="男生"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/llWoman"
                android:background="@drawable/ripple_corners"
                android:layout_marginLeft="7dp"
                android:padding="24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                >
                <ImageView
                    android:id="@+id/ivClassWoman"
                    android:layout_width="50dp"
                    android:layout_height="51dp"
                    android:src="@drawable/active_class_women"/>
                <TextView
                    android:id="@+id/tvClassWoman"
                    android:textSize="16sp"
                    android:textColor="#4cFFAB91"
                    android:layout_marginTop="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="女生"
                    />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btn_login"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="44dp"
        android:background="@drawable/app_login_shape_unenable"
        android:text="提交"
        android:textColor="@color/white"
        android:textSize="16sp" />

</LinearLayout>