<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="@dimen/dp_5"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/dp_10">

    <CheckBox
        android:id="@+id/cb_coupons"
        android:layout_width="@dimen/dp_16"
        android:layout_height="@dimen/dp_16"
        android:layout_marginStart="@dimen/dp_13"
        android:background="@drawable/selector_checkbox_red"
        android:button="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_16"
        android:layout_weight="1"
        android:background="@drawable/bg_fdf5eb_radius_4"
        android:paddingStart="@dimen/dp_12">

        <TextView
            android:id="@+id/tv_coupons_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_16"
            android:gravity="center"
            android:textColor="@color/color_363636"
            android:textSize="@dimen/dp_12"
            app:layout_constraintTop_toTopOf="parent"
            tool:text="1111111" />

        <TextView
            android:id="@+id/tv_coupons_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_20"
            android:gravity="center"
            android:textColor="@color/color_636363"
            android:textSize="@dimen/dp_10"

            app:layout_constraintTop_toBottomOf="@+id/tv_coupons_name"
            tool:text="语文专用" />

        <TextView
            android:id="@+id/tv_coupons_endTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_16"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_14"
            android:gravity="center"
            android:textColor="@color/color_979797"
            android:textSize="@dimen/dp_10"
            app:layout_constraintBottom_toBottomOf="parent"

            app:layout_constraintTop_toBottomOf="@+id/tv_coupons_type"
            tool:text="1990_1-1" />

        <TextView
            android:id="@+id/tv_coupon_endless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:background="@color/FF4F00"
            android:gravity="center"
            android:paddingEnd="@dimen/dp_15"
            android:paddingStart="@dimen/dp_15"
            android:rotation="45"
            android:text="@string/near_endless"
            android:textColor="@color/white"
            android:textSize="@dimen/dp_9"
            android:translationX="15dp"
            android:translationY="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_coupons_money"
            android:layout_width="@dimen/dp_80"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_20"
            android:gravity="center"
            android:text="￥200.00"
            android:textColor="@color/FF4F00"
            android:textSize="@dimen/dp_18"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:layout_width="@dimen/dp_1"
            android:layout_height="@dimen/dp_90"
            android:background="@color/FF4F00"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/circle_top"
            app:layout_constraintStart_toStartOf="@+id/circle_top"
            app:layout_constraintTop_toTopOf="parent" />


        <View
            android:id="@+id/circle_top"
            android:layout_width="@dimen/dp_10"
            android:layout_height="@dimen/dp_5"
            android:layout_marginEnd="@dimen/dp_10"
            android:background="@drawable/circle_bottom"
            app:layout_constraintEnd_toStartOf="@+id/tv_coupons_money" />

        <View
            android:id="@+id/circle_bottom"
            android:layout_width="@dimen/dp_10"
            android:layout_height="@dimen/dp_5"
            android:layout_marginEnd="@dimen/dp_10"
            android:background="@drawable/circle_top"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/tv_coupons_money" />

    </android.support.constraint.ConstraintLayout>
</LinearLayout>
