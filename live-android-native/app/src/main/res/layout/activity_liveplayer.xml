<?xml version="1.0" encoding="utf-8"?>
<com.haoke91.baselibrary.views.emptyview.EmptyView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/empty_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:ev_error_text="@string/error_text"
    app:ev_error_textColor="#111">

    <RelativeLayout
        android:id="@+id/rl_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.haoke91.a91edu.MainActivity">

        <com.haoke91.videolibrary.videoplayer.LivePlayer
            android:id="@+id/play_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:visibility="visible" />

        <com.haoke91.a91edu.ui.liveroom.chat.LiveDanmuView
            android:id="@+id/view_danmaku"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <com.haoke91.a91edu.widget.gift.LiveGiftLayout
            android:id="@+id/gift_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_90"
            android:layout_marginTop="@dimen/dp_50"
            android:gravity="bottom"
            android:orientation="vertical" />


        <com.haoke91.a91edu.ui.liveroom.chat.MessageListView
            android:id="@+id/view_chat_list"
            android:layout_width="@dimen/dp_200"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_50"
            android:visibility="visible" />

        <com.haoke91.baselibrary.views.DragViewGroup
            android:id="@+id/fl_dialogParent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/transparent"
            android:clickable="true"
            android:visibility="gone" />
    </RelativeLayout>
</com.haoke91.baselibrary.views.emptyview.EmptyView>
