<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_exam_head"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="题干："
        android:textColor="@color/color_363636"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_commond_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:text="请输入答案"
        android:textColor="@color/color_75C82B"
        android:textSize="12dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/tv_exam_head" />

    <TextView
        android:id="@+id/tv_tip_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:text="请输入答案"
        android:textColor="@color/color_75C82B"
        android:textSize="12dp"
        app:layout_constraintTop_toBottomOf="@id/tv_commond_tag" />

    <EditText
        android:id="@+id/et_inputReason"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/line_e9e9e9_bg_white_radius_5"
        android:gravity="top"
        android:lines="6"
        android:padding="5dp"
        android:textSize="12dp"
        app:layout_constraintTop_toBottomOf="@id/tv_tip_tag" />

</android.support.constraint.ConstraintLayout>
