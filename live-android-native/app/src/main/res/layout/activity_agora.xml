<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--<com.tencent.rtmp.ui.TXCloudVideoView-->
    <!--android:id="@+id/video"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent"-->
    <!--android:background="#321" />-->
    <com.haoke91.videolibrary.videoplayer.AgoraPlayer
        android:id="@+id/view_play"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black" />

    <com.haoke91.videolibrary.videoplayer.AudienceListView
        android:id="@+id/view_audience_list"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_50"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_toLeftOf="@id/view_chat_list"
        android:visibility="visible" />

    <com.haoke91.a91edu.ui.liveroom.chat.LiveDanmuView
        android:id="@+id/view_danmaku"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.haoke91.a91edu.widget.gift.LiveGiftLayout
        android:id="@+id/gift_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_90"
        android:layout_marginTop="@dimen/dp_50"
        android:gravity="bottom"
        android:orientation="vertical" />

    <com.haoke91.a91edu.ui.liveroom.chat.MessageListView
        android:id="@+id/view_chat_list"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dp_80"
        android:visibility="visible" />

    <com.haoke91.baselibrary.views.DragViewGroup
        android:id="@+id/fl_dialogParent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent"
        android:clickable="true"
        android:visibility="gone" />


</RelativeLayout>
