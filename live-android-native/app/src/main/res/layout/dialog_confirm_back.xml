<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_white_radius_4"
    android:paddingBottom="@dimen/dp_8"
    android:paddingEnd="@dimen/dp_16"
    android:paddingStart="@dimen/dp_16"
    android:paddingTop="@dimen/dp_8">

    <TextView
        android:id="@+id/tv_commit_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="确认是否退课"
        android:textColor="@color/color_979797"
        android:textSize="@dimen/dp_10" />

    <TextView
        android:id="@+id/tv_back_tittle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8"
        android:text="您选择的退款方式为:"
        android:textColor="@color/color_363636"
        android:textSize="@dimen/dp_12"
        app:layout_constraintTop_toBottomOf="@+id/tv_commit_back" />

    <TextView
        android:id="@+id/tv_back_method"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8"
        android:text="账户余额"
        android:textColor="@color/color_363636"
        android:textSize="@dimen/dp_12"
        app:layout_constraintStart_toEndOf="@+id/tv_back_tittle"
        app:layout_constraintTop_toBottomOf="@+id/tv_commit_back" />


    <TextView
        android:id="@+id/tv_count_tittle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8"
        android:text="退费金额："
        android:textColor="@color/color_363636"
        android:textSize="@dimen/dp_12"
        app:layout_constraintTop_toBottomOf="@+id/tv_back_method" />

    <TextView
        android:id="@+id/tv_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8"
        android:textColor="@color/FF4F00"
        android:textSize="@dimen/dp_12"
        app:layout_constraintStart_toEndOf="@+id/tv_count_tittle"
        app:layout_constraintTop_toBottomOf="@+id/tv_back_method"
        tools:text="￥980" />

    <TextView
        android:id="@+id/tv_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8"
        android:maxWidth="@dimen/dp_250"
        android:text="退费到账户余额及时到达，暂不支持提现，仅限于报名其他课程时使用"
        android:textColor="@color/color_363636"
        android:textSize="@dimen/dp_12"
        app:layout_constraintTop_toBottomOf="@+id/tv_count_tittle" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintGuide_percent="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_40"
        android:background="@drawable/line_75c82b_radius_2"
        android:paddingBottom="8dp"
        android:paddingEnd="@dimen/dp_44"
        android:paddingStart="@dimen/dp_44"
        android:paddingTop="8dp"
        android:text="@string/action_cancel"
        android:textColor="@color/color_75C82B"
        android:textSize="@dimen/dp_14"
        app:layout_constraintTop_toBottomOf="@+id/tv_state" />

    <TextView
        android:id="@+id/tv_commit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_40"
        android:background="@drawable/bg_75c82b_radius_2"
        android:paddingBottom="8dp"
        android:paddingEnd="@dimen/dp_44"
        android:paddingStart="@dimen/dp_44"
        android:paddingTop="8dp"
        android:text="@string/commit"
        android:textColor="@color/white"
        android:textSize="@dimen/dp_14"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_state" />

</android.support.constraint.ConstraintLayout>
