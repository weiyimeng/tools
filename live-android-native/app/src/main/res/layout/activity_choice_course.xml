<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/toolbar"
        layout="@layout/common_toolbar" />

    <com.haoke91.baselibrary.views.emptyview.EmptyView
        android:id="@+id/empty_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        app:ev_empty_drawable="@mipmap/empty_image_nocourse"
        app:ev_empty_text="没有相关课程"
        app:ev_error_drawable="@mipmap/net_error"
        app:ev_error_text="@string/net_error">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/toolbar"
            android:layout_marginBottom="@dimen/dp_75"
            android:overScrollMode="never"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_16"
                    android:text="选择调课课程"
                    android:textColor="@color/color_181818"
                    android:textSize="@dimen/dp_14" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_16"
                    android:descendantFocusability="blocksDescendants"
                    android:visibility="visible">

                    <com.haoke91.baselibrary.recycleview.WrapRecyclerView
                        android:id="@+id/rv_order_list"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:overScrollMode="never" />
                </RelativeLayout>

                <View
                    style="@style/line"
                    android:layout_height="@dimen/dp_4" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="调课原因"
                    android:textColor="@color/color_363636"
                    android:textSize="@dimen/dp_12" />

                <com.haoke91.a91edu.widget.flowlayout.TagFlowLayout
                    android:id="@+id/tf_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_16"
                    android:orientation="horizontal"
                    tool:layout_editor_absoluteX="16dp" />

                <com.haoke91.baselibrary.views.richEditText.RichEditText
                    android:id="@+id/et_evaluate"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_80"
                    android:layout_marginEnd="@dimen/dp_16"
                    android:layout_marginStart="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_16"
                    android:background="@drawable/bg_strokegray_radius_2"
                    android:gravity="top"
                    android:hint="您也可以填写其他调课原因"
                    android:maxLines="3"
                    android:padding="@dimen/dp_5"
                    android:textColor="@color/color_363636"
                    android:textColorHint="@color/c3c3c3"
                    android:textSize="@dimen/dp_12" />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_4"
                    android:layout_marginBottom="@dimen/dp_8"
                    android:layout_marginTop="@dimen/dp_8"
                    android:background="@color/FBFBFB" />


            </LinearLayout>
        </ScrollView>
    </com.haoke91.baselibrary.views.emptyview.EmptyView>

    <TextView
        android:id="@+id/tv_statement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/rl_order_bottom"
        android:layout_marginEnd="@dimen/dp_16"
        android:layout_marginStart="@dimen/dp_16"
        android:text="每个课程仅支持两个课次调课，调课仅能观看直播和回放，调课后不影响原有课程的一切服务"
        android:textColor="@color/FF4F00"
        android:textSize="@dimen/dp_10" />

    <RelativeLayout
        android:id="@+id/rl_order_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg_white_radius_4"
        android:elevation="@dimen/dp_4"
        android:visibility="visible"
        tool:layout_editor_absoluteX="8dp"
        tool:layout_editor_absoluteY="5dp">

        <TextView
            android:id="@+id/tv_commit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_16"
            android:background="@drawable/bg_pay"
            android:gravity="center"
            android:paddingBottom="@dimen/dp_4"
            android:paddingLeft="@dimen/dp_27"
            android:paddingRight="@dimen/dp_27"
            android:paddingTop="@dimen/dp_4"
            android:text="@string/commit"
            android:textColor="@color/white"
            android:textSize="@dimen/dp_12" />

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dp_8"
            android:layout_toLeftOf="@+id/tv_commit"
            android:background="@drawable/line_979797_radius_20"
            android:gravity="center"
            android:paddingBottom="@dimen/dp_4"
            android:paddingLeft="@dimen/dp_27"
            android:paddingRight="@dimen/dp_27"
            android:paddingTop="@dimen/dp_4"
            android:text="@string/action_cancel"
            android:textColor="@color/color_363636"
            android:textSize="@dimen/dp_12" />
    </RelativeLayout>
</RelativeLayout>
