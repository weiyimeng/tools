<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tool="http://schemas.android.com/tools">

    <include layout="@layout/common_toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:scaleType="fitCenter"
                android:src="@mipmap/logo_login" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <EditText
                    android:id="@+id/et_mobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="请输入手机号"
                    android:inputType="phone"
                    android:maxLength="11"
                    android:padding="15dp"
                    android:singleLine="true"
                    android:textColor="#666666"
                    android:textColorHint="@color/c3c3c3"
                    android:textSize="14dp" />

                <ImageView
                    android:id="@+id/iv_clean_phone"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:padding="5dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_close_black"
                    android:visibility="gone" />

                <View
                    android:id="@+id/line_mobile"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:layout_below="@id/et_mobile"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="@color/E9E9E9" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <EditText
                    android:id="@+id/et_sms"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="请输入短信验证码"
                    android:inputType="number"
                    android:padding="15dp"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="#666666"
                    android:textColorHint="@color/c3c3c3"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/tv_sendSms"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/bg_strokegray_radius_2"
                    android:padding="6dp"
                    android:text="获取验证码"
                    android:textColor="@color/c3c3c3"
                    android:textSize="12dp" />

                <ImageView
                    android:id="@+id/iv_clean_sms"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:layout_toLeftOf="@id/tv_sendSms"
                    android:padding="5dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_close_black"
                    android:visibility="gone" />

                <View
                    android:id="@+id/line_sms"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:layout_below="@id/et_sms"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="@color/E9E9E9" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <EditText
                    android:id="@+id/et_pwd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="请输入密码"
                    android:inputType="textPassword"
                    android:padding="15dp"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="#666666"
                    android:textColorHint="@color/c3c3c3"
                    android:textSize="14dp" />

                <ImageView
                    android:id="@+id/iv_clean_pwd"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:padding="5dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_close_black"
                    android:visibility="gone" />
                <ImageView
                    android:id="@+id/iv_canSee"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:layout_toLeftOf="@id/iv_clean_pwd"
                    android:padding="5dp"
                    android:src="@drawable/selector_eye"
                    android:visibility="gone" />

                <View
                    android:id="@+id/line_pwd"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:layout_below="@id/et_pwd"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="@color/E9E9E9" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <EditText
                    android:id="@+id/et_pwd2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="请输入确认密码"
                    android:inputType="textPassword"
                    android:padding="15dp"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="#666666"
                    android:textColorHint="@color/c3c3c3"
                    android:textSize="14dp" />

                <ImageView
                    android:id="@+id/iv_clean_pwd2"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:padding="5dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_close_black"
                    android:visibility="gone" />
                <ImageView
                    android:id="@+id/iv_canSee2"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:layout_toLeftOf="@id/iv_clean_pwd2"
                    android:padding="5dp"
                    android:src="@drawable/selector_eye"
                    android:visibility="gone" />

                <View
                    android:id="@+id/line_pwd2"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:layout_below="@id/et_pwd2"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="@color/E9E9E9" />
            </RelativeLayout>

            <TextView
                android:id="@+id/goto_regist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/btn_selector_green_gray_radius_4"
                android:enabled="false"
                android:gravity="center"
                android:padding="10dp"
                android:text="注册"
                android:textColor="@color/white"
                android:textSize="18dp" />

            <CheckBox
                android:id="@+id/cb_protocol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:checked="true"
                android:padding="5dp"
                tool:text="我已阅读并同意《用户协议》"
                android:textColor="@color/color_363636"
                android:textSize="12dp"
                android:theme="@style/GreenCheckBox" />


        </LinearLayout>

    </ScrollView>

</RelativeLayout>
