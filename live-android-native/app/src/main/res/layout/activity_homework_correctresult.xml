<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        layout="@layout/common_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_courseName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_16"
                    android:textColor="@color/color_181818"
                    android:textSize="@dimen/dp_16"
                    tool:text="初二数学目标竞赛班" />

                <TextView
                    android:id="@+id/tv_secondName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_courseName"
                    android:layout_marginStart="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_3"
                    android:textColor="@color/color_9B9B9B"
                    android:textSize="@dimen/dp_12"
                    tool:text="第1讲 一元二次不等式 " />

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_secondName"
                    android:layout_marginBottom="@dimen/dp_16"
                    android:layout_marginStart="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_8"
                    android:text="批改时间： "
                    android:textColor="@color/color_9B9B9B"
                    android:textSize="@dimen/dp_12" />

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_30">

                    <TextView
                        android:id="@+id/tv_score"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:rotation="-20"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:textColor="@color/FF4F00"
                        android:textSize="20dp"
                        tool:text="99分" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="25dp"
                        android:src="@mipmap/study_workresult_image" />
                </FrameLayout>
            </RelativeLayout>

            <View
                style="@style/line"
                android:layout_height="0.5dp"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_16" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_16"
                android:text="作业名称"
                android:visibility="gone"
                android:textColor="@color/color_181818"
                android:textSize="@dimen/dp_16" />

            <TextView
                android:id="@+id/tv_homeworkName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_8"
                android:textColor="@color/color_181818"
                android:textSize="@dimen/dp_12"
                android:visibility="gone"
                tool:text="Sed mollis felis orci, id efficitur elit ornare id. Donec at " />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_16"
                android:text="作业内容"
                android:textColor="@color/color_181818"
                android:textSize="@dimen/dp_16" />

            <TextView
                android:id="@+id/tv_homeworkContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_8"
                android:textColor="@color/color_181818"
                android:textSize="@dimen/dp_12"
                tool:text="Sed mollis felis orci, id efficitur elit ornare id. Donec at " />
            <LinearLayout
                android:id="@+id/ll_teacherArea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_16"
                    android:text="批改老师"
                    android:textColor="@color/color_181818"
                    android:textSize="@dimen/dp_16" />

                <TextView
                    android:id="@+id/tv_teacherName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_8"
                    android:textColor="@color/color_181818"
                    android:textSize="12dp"
                    tool:text="王老师" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_awardArea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_16"
                    android:text="作业奖励"
                    android:textColor="@color/color_181818"
                    android:textSize="@dimen/dp_16" />

                <TextView
                    android:id="@+id/tv_homeworkAward"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_8"
                    android:textColor="@color/F89A00"
                    android:textSize="14dp"
                    tool:text="金币 成长值 继续努力哦" />
            </LinearLayout>
            <View
                style="@style/line"
                android:layout_height="@dimen/dp_4"
                android:layout_marginTop="@dimen/dp_28" />


            <com.tmall.ultraviewpager.UltraViewPager
                android:id="@+id/vp_homework"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_195">

                <ImageView
                    android:id="@+id/iv_background"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="invisible" />

                <com.haoke91.a91edu.widget.tilibrary.view.indicator.NumberIndicator
                    android:id="@+id/indicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="@dimen/dp_32"
                    android:layout_marginTop="@dimen/dp_16"
                    android:background="@drawable/bg_181818_radius_9"
                    android:paddingEnd="@dimen/dp_5"
                    android:paddingStart="@dimen/dp_5"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dp_12"
                    tool:text="111" />

            </com.tmall.ultraviewpager.UltraViewPager>

        </LinearLayout>

    </ScrollView>
</LinearLayout>
