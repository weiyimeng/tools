<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center_vertical"
        android:transitionName="@string/sign"
        app:contentInsetStart="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <EditText
                android:id="@+id/searchView"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_32"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="@dimen/dp_6"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_23"
                android:layout_marginTop="@dimen/dp_6"
                android:layout_toLeftOf="@id/tv_cancel"
                android:background="@drawable/bg_white_radius_25"
                android:drawableLeft="@mipmap/home_nav_icon_search"
                android:drawableRight="@drawable/ic_close_black"
                android:gravity="center_vertical"
                android:hint="请输入搜索内容"
                android:paddingBottom="5dp"
                android:paddingLeft="@dimen/dp_14"
                android:paddingRight="@dimen/dp_14"
                android:paddingTop="5dp"
                android:singleLine="true"
                android:imeOptions="actionSearch"
                android:textColor="@color/color_363636"
                android:textColorHint="@color/C4C4C4"
                android:textSize="@dimen/dp_13">

            </EditText>

            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_16"
                android:text="取消"
                android:textColor="@color/color_363636"
                android:textSize="@dimen/dp_12" />
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>

    <FrameLayout
        android:id="@+id/fl_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>
