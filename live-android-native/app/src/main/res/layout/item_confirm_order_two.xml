<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/dp_16"
    android:layout_marginStart="@dimen/dp_12">

    <TextView
        android:id="@+id/tv_order_holiday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_94e044_radius_2"
        android:gravity="center"
        android:paddingLeft="@dimen/dp_2"
        android:paddingRight="@dimen/dp_2"
        android:layout_marginStart="@dimen/dp_4"
        android:text="暑"
        android:textColor="@color/white"
        android:textSize="@dimen/dp_12"
        app:layout_constraintBottom_toBottomOf="@+id/tv_order_course_name"
        app:layout_constraintStart_toEndOf="@id/tv_order_holiday"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_order_course_name" />


    <TextView
        android:id="@+id/tv_order_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_3"
        android:background="@drawable/bg_f5c942_radius_2"
        android:gravity="center"
        android:paddingLeft="@dimen/dp_2"
        android:paddingRight="@dimen/dp_2"
        android:text="语"
        android:textColor="@color/color_75C82B"
        android:textSize="@dimen/dp_12"
        app:layout_constraintBottom_toBottomOf="@+id/tv_order_course_name"
        app:layout_constraintStart_toEndOf="@id/tv_order_holiday"
        app:layout_constraintTop_toTopOf="@+id/tv_order_course_name" />

    <TextView
        android:id="@+id/tv_order_course_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_4"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/color_181818"
        android:textSize="@dimen/dp_16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_order_tag"
        tool:text="三年级语文直播长线班三年级语" />


    <TextView
        android:id="@+id/tv_order_course_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8"
        android:gravity="center"
        android:singleLine="true"
        android:textColor="@color/color_9B9B9B"
        android:textSize="@dimen/dp_12"
        app:layout_constraintTop_toBottomOf="@+id/tv_order_course_name"
        tool:text="2017年2月1日-6月1日 · 每周五18:30 - 20:30" />

    <com.haoke91.a91edu.widget.CircleImageView
        android:id="@+id/iv_order_teacher_icon"
        android:layout_width="@dimen/dp_32"
        android:layout_height="@dimen/dp_32"
        android:layout_marginTop="@dimen/dp_24"
        android:layout_marginStart="@dimen/dp_4"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@mipmap/study_image_head"
        app:civ_border_overlay="true"
        app:layout_constraintTop_toBottomOf="@+id/tv_order_course_time" />

    <TextView
        android:id="@+id/tv_order_teacher_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_4"
        android:textColor="@color/color_363636"
        android:textSize="@dimen/dp_10"
        app:layout_constraintEnd_toEndOf="@id/iv_order_teacher_icon"
        app:layout_constraintStart_toStartOf="@id/iv_order_teacher_icon"
        app:layout_constraintTop_toBottomOf="@+id/iv_order_teacher_icon"
        tool:text="温馨温馨" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_4"
        android:text="@string/main_teacher"
        android:textColor="@color/color_979797"
        android:textSize="@dimen/dp_10"
        app:layout_constraintEnd_toEndOf="@id/iv_order_teacher_icon"
        app:layout_constraintStart_toStartOf="@id/iv_order_teacher_icon"
        app:layout_constraintTop_toBottomOf="@+id/tv_order_teacher_name" />

    <com.haoke91.a91edu.widget.CircleImageView
        android:id="@+id/iv_teacher_two_icon"
        android:layout_width="@dimen/dp_32"
        android:layout_height="@dimen/dp_32"
        android:layout_marginStart="@dimen/dp_9"
        android:layout_marginTop="@dimen/dp_24"
        android:src="@mipmap/study_image_head"
        app:civ_border_overlay="true"
        app:layout_constraintStart_toEndOf="@+id/iv_order_teacher_icon"
        app:layout_constraintTop_toBottomOf="@+id/tv_order_course_time" />

    <TextView
        android:id="@+id/tv_order_teacher_name_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_4"
        android:textColor="@color/color_363636"
        android:textSize="@dimen/dp_10"
        app:layout_constraintEnd_toEndOf="@+id/iv_teacher_two_icon"
        app:layout_constraintStart_toStartOf="@+id/iv_teacher_two_icon"
        app:layout_constraintTop_toBottomOf="@+id/iv_teacher_two_icon"
        tool:text="温馨" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="11dp"
        android:layout_marginTop="@dimen/dp_4"
        android:text="@string/main_teacher"
        android:textColor="@color/color_979797"
        android:textSize="@dimen/dp_10"
        app:layout_constraintEnd_toEndOf="@+id/iv_teacher_two_icon"
        app:layout_constraintStart_toStartOf="@+id/iv_teacher_two_icon"
        app:layout_constraintTop_toBottomOf="@+id/tv_order_teacher_name_two" />

    <ImageView
        android:id="@+id/iv_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_more"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/iv_teacher_two_icon"
        app:layout_constraintStart_toEndOf="@+id/iv_teacher_two_icon"
        app:layout_constraintTop_toTopOf="@+id/iv_teacher_two_icon" />

    <com.haoke91.a91edu.widget.CircleImageView
        android:id="@+id/iv_order_assistant_icon"
        android:layout_width="@dimen/dp_32"
        android:layout_height="@dimen/dp_32"
        android:layout_marginStart="@dimen/dp_9"
        android:layout_marginTop="@dimen/dp_24"
        android:src="@mipmap/study_image_head"
        app:civ_border_overlay="true"
        app:layout_constraintStart_toEndOf="@id/iv_teacher_two_icon"
        app:layout_constraintTop_toBottomOf="@+id/tv_order_course_time" />

    <TextView
        android:id="@+id/tv_assistant_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_4"
        android:textColor="@color/color_363636"
        android:textSize="@dimen/dp_10"
        app:layout_constraintEnd_toEndOf="@id/iv_order_assistant_icon"
        app:layout_constraintStart_toStartOf="@id/iv_order_assistant_icon"
        app:layout_constraintTop_toBottomOf="@+id/iv_order_assistant_icon"
        tool:text="温馨" />

    <TextView
        android:id="@+id/tv_assistant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_4"
        android:text="@string/assistant_teacher"
        android:textColor="@color/color_979797"
        android:textSize="@dimen/dp_10"
        app:layout_constraintEnd_toEndOf="@id/iv_order_assistant_icon"
        app:layout_constraintStart_toStartOf="@id/iv_order_assistant_icon"
        app:layout_constraintTop_toBottomOf="@+id/tv_assistant_name" />

    <TextView
        android:id="@+id/tv_course_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_11"
        android:textColor="@color/FF4F00"
        android:textSize="@dimen/dp_20"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_assistant"
        tool:text="￥888" />

    <LinearLayout
        android:id="@+id/ll_order_extra"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_8"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/tv_course_money">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/material"
            android:textColor="@color/color_363636"
            android:textSize="@dimen/dp_10" />

        <TextView
            android:id="@+id/tv_course_material"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_8"
            android:textColor="@color/color_363636"
            android:textSize="@dimen/dp_10"
            tool:text="@string/material" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>

