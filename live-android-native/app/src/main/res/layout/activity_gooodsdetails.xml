<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/common_toolbar" />

    <com.haoke91.baselibrary.views.emptyview.EmptyView
        android:id="@+id/mEmptyView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:ev_empty_drawable="@mipmap/empty_image_nocourse"
        app:ev_empty_text="获取数据失败"
        app:ev_error_drawable="@mipmap/net_error"
        app:ev_error_text="@string/net_error">

        <android.support.constraint.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="@dimen/dp_21">

            <ImageView
                android:id="@+id/iv_gift"
                android:layout_width="@dimen/dp_93"
                android:layout_height="@dimen/dp_72"
                android:layout_marginStart="@dimen/dp_21"
                android:background="@mipmap/ic_launcher"
                android:scaleType="fitXY"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/tv_giftName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_13"
                android:text="商品"
                android:textColor="@color/color_363636"
                android:textSize="@dimen/dp_14"
                app:layout_constraintStart_toEndOf="@+id/iv_gift" />

            <TextView
                android:id="@+id/tv_exchange_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/tv_giftName"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:text="兑换时间："
                android:textColor="@color/color_979797"
                android:textSize="@dimen/dp_10"
                app:layout_constraintStart_toStartOf="@+id/tv_giftName"
                app:layout_constraintTop_toBottomOf="@+id/tv_giftName" />

            <TextView
                android:id="@+id/tv_nums"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_giftName"
                android:layout_marginTop="@dimen/dp_4"
                android:gravity="center"
                android:text="数量: 合计："
                android:textColor="@color/color_363636"
                android:textSize="@dimen/dp_10"
                app:layout_constraintBottom_toBottomOf="@+id/tv_gold"
                app:layout_constraintStart_toStartOf="@+id/tv_giftName" />

            <TextView
                android:id="@+id/tv_gold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_giftName"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="@dimen/dp_4"
                android:gravity="center"
                android:text="0金币"
                android:textColor="@color/FFBD00"
                android:textSize="14dp"
                app:layout_constraintStart_toEndOf="@id/tv_nums"
                app:layout_constraintTop_toBottomOf="@+id/tv_exchange_time" />

            <TextView
                android:id="@+id/tv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/tv_giftName"
                android:layout_marginEnd="@dimen/dp_13"
                android:text=""
                android:textColor="@color/color_363636"
                android:textSize="@dimen/dp_10"
                app:layout_constraintBottom_toBottomOf="@id/tv_nums"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/tv_address_tittle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_16"
                android:text="收货地址"
                android:textColor="@color/color_979797"
                android:textSize="@dimen/dp_12"
                app:layout_constraintStart_toStartOf="@+id/iv_gift"
                app:layout_constraintTop_toBottomOf="@+id/iv_gift" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                android:text="姓名"
                android:textColor="@color/color_363636"
                android:textSize="@dimen/dp_14"
                app:layout_constraintStart_toStartOf="@+id/tv_address_tittle"
                app:layout_constraintTop_toBottomOf="@+id/tv_address_tittle" />

            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_32"
                android:text="手机号 "
                android:textColor="@color/color_363636"
                android:textSize="@dimen/dp_14"
                app:layout_constraintStart_toEndOf="@+id/tv_name"
                app:layout_constraintTop_toTopOf="@+id/tv_name" />

            <TextView
                android:id="@+id/tv_address_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_16"
                android:gravity="left"
                android:lines="2"
                android:paddingEnd="@dimen/dp_16"
                android:paddingStart="@dimen/dp_16"
                android:textColor="@color/color_363636"
                android:textSize="@dimen/dp_12"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/tv_name"
                app:layout_constraintTop_toBottomOf="@+id/tv_name"
                tools:text="北京市海淀区成府路35-1新东源股份社北楼301新东源社北楼301新东源" />

            <TextView
                android:id="@+id/tv_translate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_16"
                android:text="快递详情"
                android:textColor="@color/color_979797"
                android:textSize="@dimen/dp_12"
                app:layout_constraintStart_toStartOf="@+id/tv_name"
                app:layout_constraintTop_toBottomOf="@+id/tv_address_detail" />


            <TextView
                android:id="@+id/tv_translate_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                android:textColor="@color/color_363636"
                android:textSize="@dimen/dp_12"
                app:layout_constraintStart_toStartOf="@+id/tv_translate"
                app:layout_constraintTop_toBottomOf="@+id/tv_translate"
                tools:text="顺丰快递 72010923483" />

            <TextView
                android:id="@+id/receivedBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_34"
                android:layout_marginEnd="@dimen/dp_16"
                android:background="@drawable/line_ff4f0_radius_18"
                android:paddingBottom="@dimen/dp_8"
                android:paddingEnd="@dimen/dp_15"
                android:paddingStart="@dimen/dp_15"
                android:paddingTop="@dimen/dp_8"
                android:text="确认收货"
                android:textColor="@color/FF4F00"
                android:textSize="@dimen/dp_12"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </android.support.constraint.ConstraintLayout>
    </com.haoke91.baselibrary.views.emptyview.EmptyView>

</LinearLayout>
