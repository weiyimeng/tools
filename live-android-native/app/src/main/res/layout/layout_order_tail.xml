<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/tv_order_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_16"
        android:layout_marginStart="@dimen/dp_5"
        android:gravity="center_vertical"
        android:textColor="@color/color_363636"
        android:textSize="@dimen/dp_20"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="￥888" />

    <TextView
        android:id="@+id/tv_pay_method"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_5"
        android:text="实付款："
        android:textColor="@color/color_979797"
        android:textSize="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_4"
        app:layout_constraintBottom_toBottomOf="@+id/tv_order_money"
        app:layout_constraintEnd_toStartOf="@+id/tv_order_money" />

    <View
        android:id="@+id/line"
        style="@style/line"
        android:layout_marginEnd="@dimen/dp_16"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_10"
        app:layout_constraintTop_toBottomOf="@+id/tv_order_money" />

    <TextView
        android:id="@+id/tv_order_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/line_ff4f0_radius_18"
        android:paddingBottom="@dimen/dp_2"
        android:paddingEnd="@dimen/dp_8"
        android:paddingStart="@dimen/dp_8"
        android:paddingTop="@dimen/dp_2"
        android:textColor="@color/FF4F00"
        android:textSize="@dimen/dp_12"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/line"
        tools:text="立即支付" />


    <TextView
        android:id="@+id/tv_order_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_12"
        android:text="@string/order_detail"
        android:textColor="@color/color_363636"
        android:textSize="@dimen/dp_12"
        app:layout_constraintEnd_toStartOf="@+id/tv_order_action"
        app:layout_constraintTop_toBottomOf="@+id/line" />

    <View
        style="@style/line"
        android:layout_height="@dimen/dp_4"
        android:layout_marginEnd="@dimen/dp_16"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_10"
        app:layout_constraintTop_toBottomOf="@+id/tv_order_detail" />
</android.support.constraint.ConstraintLayout>
