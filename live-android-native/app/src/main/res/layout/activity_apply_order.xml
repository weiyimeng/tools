<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/toolbar"
        layout="@layout/common_toolbar" />

    <com.haoke91.baselibrary.views.emptyview.EmptyView
        android:id="@+id/empty_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        app:ev_empty_drawable="@mipmap/empty_image_nocourse"
        app:ev_empty_text="没有相关课程"
        app:ev_error_drawable="@mipmap/net_error"
        app:ev_error_text="@string/net_error">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/toolbar"
            android:layout_marginBottom="@dimen/dp_50"
            android:overScrollMode="never"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:descendantFocusability="blocksDescendants"
                    android:visibility="visible">

                    <com.haoke91.baselibrary.recycleview.WrapRecyclerView
                        android:id="@+id/rv_order_list"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:overScrollMode="never" />
                </RelativeLayout>

                <View
                    style="@style/line"
                    android:layout_height="@dimen/dp_4" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_16"
                    android:text="@string/back_method"
                    android:textColor="@color/color_363636"
                    android:textSize="@dimen/dp_12" />


                <RadioGroup
                    android:id="@+id/rg_back_method"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_8"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/back_origin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@null"
                        android:drawableLeft="@drawable/selector_checkbox_red"
                        android:drawablePadding="@dimen/dp_8"
                        android:text="@string/back_origin"
                        android:textColor="@color/color_979797"
                        android:textSize="@dimen/dp_12" />

                    <RadioButton
                        android:id="@+id/back_hank"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_16"
                        android:button="@null"
                        android:drawableLeft="@drawable/selector_checkbox_red"
                        android:drawablePadding="@dimen/dp_8"
                        android:text="退到银行卡"
                        android:textColor="@color/color_979797"
                        android:textSize="@dimen/dp_12" />

                    <RadioButton
                        android:id="@+id/back_balance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_16"
                        android:button="@null"
                        android:drawableLeft="@drawable/selector_checkbox_red"
                        android:drawablePadding="@dimen/dp_8"
                        android:text="退到余额"
                        android:textColor="@color/color_979797"
                        android:textSize="@dimen/dp_12" />
                </RadioGroup>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_20"
                    android:text="@string/back_reason"
                    android:textColor="@color/color_363636"
                    android:textSize="@dimen/dp_12" />

                <com.haoke91.a91edu.widget.flowlayout.TagFlowLayout
                    android:id="@+id/tf_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_16"
                    android:orientation="horizontal"
                    tool:layout_editor_absoluteX="16dp" />

                <com.haoke91.baselibrary.views.richEditText.RichEditText
                    android:id="@+id/et_evaluate"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_80"
                    android:layout_marginEnd="@dimen/dp_16"
                    android:layout_marginStart="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_16"
                    android:background="@drawable/bg_strokegray_radius_2"
                    android:gravity="top"
                    android:hint="您也可以填写其他退课原因"
                    android:maxLines="3"
                    android:padding="@dimen/dp_5"
                    android:textColor="@color/color_363636"
                    android:textColorHint="@color/c3c3c3"
                    android:textSize="@dimen/dp_12" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_20"
                    android:text="@string/back_detail"
                    android:textColor="@color/color_363636"
                    android:textSize="@dimen/dp_12" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp_16"
                    android:layout_marginStart="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_8">

                    <TextView
                        style="@style/textView_order_count"
                        android:text="@string/payed_money" />

                    <TextView
                        android:id="@+id/tv_payed_money"
                        style="@style/textView_order_count"
