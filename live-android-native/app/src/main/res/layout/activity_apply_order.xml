                <!--android:textSize="@dimen/dp_10" />-->
            </LinearLayout>
        </ScrollView>
    </com.haoke91.baselibrary.views.emptyview.EmptyView>

    <RelativeLayout
        android:id="@+id/rl_order_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg_white_radius_4"
        android:elevation="@dimen/dp_4"
        android:visibility="visible"
        tool:layout_editor_absoluteX="8dp"
        tool:layout_editor_absoluteY="5dp">

        <TextView
            android:id="@+id/tv_pay_type"
            style="@style/textView_order_count"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_16"
            android:text="@string/except_back" />

        <TextView
            android:id="@+id/tv_except_back"
            style="@style/textView_order_count"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tv_pay_type"
            android:textColor="@color/FF4F00"
            android:textSize="@dimen/dp_20"
            tool:text="￥88.00" />

        <TextView
            android:id="@+id/tv_commit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_16"
            android:background="@drawable/bg_pay"
            android:gravity="center"
            android:paddingBottom="@dimen/dp_4"
            android:paddingLeft="@dimen/dp_27"
            android:paddingRight="@dimen/dp_27"
            android:paddingTop="@dimen/dp_4"
            android:text="@string/commit"
            android:textColor="@color/white"
            android:textSize="@dimen/dp_12" />

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dp_8"
            android:layout_toLeftOf="@+id/tv_commit"
            android:background="@drawable/line_979797_radius_20"
            android:gravity="center"
            android:paddingBottom="@dimen/dp_4"
            android:paddingLeft="@dimen/dp_27"
            android:paddingRight="@dimen/dp_27"
            android:paddingTop="@dimen/dp_4"
            android:text="@string/action_cancel"
            android:textColor="@color/color_363636"
            android:textSize="@dimen/dp_12" />
