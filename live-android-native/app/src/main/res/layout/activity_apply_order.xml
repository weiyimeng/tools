                    <TextView
                        android:id="@+id/tv_back_order_money"
                        style="@style/textView_order_count"
                        android:layout_alignParentRight="true"

                        android:textColor="@color/FF4F00"
                        tool:text="￥1000.00" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp_16"
                    android:layout_marginStart="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_8">

                    <TextView
                        style="@style/textView_order_count"
                        android:text="@string/cast_money" />

                    <TextView
                        android:id="@+id/tv_cast_money"
                        style="@style/textView_order_count"
                        android:layout_alignParentRight="true"

                        android:textColor="@color/FF4F00"
                        tool:text="￥1000.00" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp_16"
                    android:layout_marginStart="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_8">

                    <TextView
                        style="@style/textView_order_count"
                        android:text="@string/service_money" />

                    <TextView
                        android:id="@+id/tv_service_money"
                        style="@style/textView_order_count"
                        android:layout_alignParentRight="true"

                        android:textColor="@color/FF4F00"
                        tool:text="￥20.00" />
                </RelativeLayout>

