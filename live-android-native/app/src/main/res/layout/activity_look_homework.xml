<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/tv_reUpload"
        android:orientation="vertical">

        <include
            layout="@layout/common_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true" />

        <TextView
            android:id="@+id/tv_courseName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_16"
            android:textColor="@color/color_181818"
            android:textSize="@dimen/dp_16"
            tools:text="初二数学目标竞赛班" />

        <TextView
            android:id="@+id/tv_secondName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_3"
            android:textColor="@color/color_9B9B9B"
            android:textSize="@dimen/dp_12"
            tools:text="第1讲 一元二次不等式 " />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_8"
            android:text="截止时间： "
            android:textColor="@color/color_9B9B9B"
            android:textSize="@dimen/dp_12" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_8"
            android:text="提交作业可获得金币和成长值哦～ "
            android:textColor="@color/color_9B9B9B"
            android:textSize="@dimen/dp_12" />

        <View
            style="@style/line"
            android:layout_height="@dimen/dp_1"
            android:layout_marginTop="@dimen/dp_16" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_16"
            android:text="作业名称"
            android:textColor="@color/color_181818"
            android:textSize="@dimen/dp_16"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_homeworkName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_8"
            android:textColor="@color/color_9B9B9B"
            android:textSize="@dimen/dp_12"
            android:visibility="gone"
            tools:text="Sed mollis felis orci, id efficitur elit ornare id. Donec at " />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_16"
            android:text="作业内容"
            android:textColor="@color/color_181818"
            android:textSize="@dimen/dp_16" />

        <TextView
            android:id="@+id/tv_homeworkContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_8"
            android:textColor="@color/color_9B9B9B"
            android:textSize="@dimen/dp_12"
            tools:text="Sed mollis felis orci, id efficitur elit ornare id. Donec at " />

        <View
            style="@style/line"
            android:layout_height="@dimen/dp_4"
            android:layout_marginTop="@dimen/dp_28" />


        <com.tmall.ultraviewpager.UltraViewPager
            android:id="@+id/vp_homework"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_195">

            <ImageView
                android:id="@+id/iv_background"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="invisible" />

            <com.haoke91.a91edu.widget.tilibrary.view.indicator.NumberIndicator
                android:id="@+id/indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="@dimen/dp_32"
                android:layout_marginTop="@dimen/dp_16"
                android:background="@drawable/bg_181818_radius_9"
                android:paddingEnd="@dimen/dp_5"
                android:paddingStart="@dimen/dp_5"
                android:textColor="@color/white"
                android:textSize="@dimen/dp_12"
                tool:text="111" />

        </com.tmall.ultraviewpager.UltraViewPager>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_reUpload"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/btn_selector_green_gray"
        android:clickable="true"
        android:elevation="5dp"
        android:gravity="center"
        android:onClick="clickEvent"
        android:paddingBottom="@dimen/dp_10"
        android:paddingTop="@dimen/dp_10"
        android:text="重新提交"
        android:textColor="@color/white"
        android:textSize="@dimen/dp_16" />
</RelativeLayout>
