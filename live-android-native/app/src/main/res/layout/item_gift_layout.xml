<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom">

    <RelativeLayout
        android:id="@+id/infoRl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="8dp">

        <com.haoke91.a91edu.widget.CircleImageView
            android:id="@+id/headIv"
            android:layout_width="39dp"
            android:layout_height="39dp"
            android:layout_centerVertical="true"
            android:layout_margin="3dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/study_image_head"
            app:civ_border_overlay="true" />

        <TextView
            android:id="@+id/nickNameTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="4dp"
            android:layout_toRightOf="@id/headIv"
            android:text="nickName"
            android:textColor="#ffffff"
            android:textSize="@dimen/dp_12" />

        <TextView
            android:id="@+id/infoTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/nickNameTv"
            android:layout_below="@id/nickNameTv"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:text="送了一个"
            android:textColor="#ffea79"
            android:textSize="@dimen/dp_12" />

        <!--<com.airbnb.lottie.LottieAnimationView-->
        <!--android:id="@+id/view_animation"-->
        <!--android:layout_width="20dp"-->
        <!--android:layout_height="20dp"-->
        <!--android:layout_centerVertical="true"-->
        <!--android:layout_toRightOf="@+id/infoTv"-->
        <!--android:visibility="visible"-->
        <!--tool:lottie_fileName="data3.json" />-->
        <ImageView
            android:id="@+id/view_animation"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/infoTv"
            android:visibility="visible" />
    </RelativeLayout>

    <!--<ImageView-->
    <!--android:id="@+id/light"-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:layout_marginLeft="120dp" />-->


    <com.haoke91.a91edu.widget.gift.StrokeTextView
        android:id="@+id/tv_gift_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="@dimen/dp_10"
        android:layout_toRightOf="@+id/infoRl"
        android:text="x 1"
        android:textColor="#0076ff"
        android:textSize="24sp"
        app:innnerColor="#ffffff"
        app:outerColor="#0076ff" />

</RelativeLayout>
