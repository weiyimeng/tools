<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Black.NoTitleBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="DialogStyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@style/AnimationPicker</item>
    </style>

    <style name="AnimationPicker" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/dialog_enter</item>
        <!--<item name="android:windowExitAnimation">@anim/bottomview_anim_exi</item>-->
    </style>

    <style name="MainTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SplashTheme" parent="MainTheme">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@mipmap/bg_splash</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="homework" parent="MainTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="FullTheme" parent="MainTheme">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppTheme.Light">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <style name="TopPopAnim" parent="@android:style/Animation.Activity">
        <item name="android:windowEnterAnimation">@anim/menu_in</item>
        <!--<item name="android:windowExitAnimation">@anim/right_out</item>-->
    </style>

    <style name="UpdateAppNumberProgressBar_Red">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>

        <item name="progress_max">100</item>
        <item name="progress_current">0</item>

        <item name="progress_unreached_color">#CCCCCC</item>
        <item name="progress_reached_color">#e94339</item>

        <item name="progress_text_size">12sp</item>
        <item name="progress_text_color">#e94339</item>

        <item name="progress_reached_bar_height">4dp</item>
        <item name="progress_unreached_bar_height">3dp</item>
    </style>

    <style name="UpdateAppDialog" parent="android:style/Theme.Dialog">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
        <item name="android:windowEnterAnimation">@anim/updateapp_window_in</item>
        <item name="android:windowExitAnimation">@anim/updateapp_window_out</item>
    </style>

    <style name="WrapDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowEnterAnimation">@anim/updateapp_window_in</item>
        <item name="android:windowExitAnimation">@anim/updateapp_window_out</item>
    </style>

    <style name="TextNormal">
        <item name="android:textSize">12dp</item>
    </style>


    <style name="line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_1</item>
        <item name="android:background">@color/FBFBFB</item>
    </style>

    <style name="textView_userInfo_tittle">
        <item name="android:layout_marginLeft">@dimen/dp_16</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/color_363636</item>
        <item name="android:textSize">@dimen/dp_14</item>
    </style>

    <style name="textView_study_tittle">
        <item name="android:gravity">center</item>
        <item name="android:drawablePadding">@dimen/dp_6</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/color_363636</item>
        <item name="android:textSize">@dimen/dp_10</item>
    </style>

    <style name="textView_course_order">
        <item name="android:gravity">center</item>
        <item name="android:drawablePadding">@dimen/dp_2</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/color_363636</item>
        <item name="android:textSize">@dimen/dp_10</item>
    </style>

    <style name="textView_userInfo_content">
        <item name="android:layout_marginLeft">@dimen/dp_12</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLength">15</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/color_363636</item>
        <item name="android:textSize">@dimen/dp_14</item>
    </style>

    <style name="imageView_userInf_go">
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_width">@dimen/dp_9</item>
        <item name="android:layout_height">@dimen/dp_9</item>
    </style>

    <style name="textView_userInf_banner">
        <item name="android:gravity">center</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_width">@dimen/dp_0</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/dp_12</item>
        <item name="android:textColor">@color/color_363636</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="checkBox_home_pop">
        <item name="android:textSize">@dimen/dp_12</item>
        <item name="android:textColor">@color/text_363636_75c82b_selector</item>
        <item name="android:background">@drawable/bg_white_fb_selector</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:button">@null</item>
        <item name="android:layout_height">@dimen/dp_44</item>
    </style>

    <style name="textView_userInf_item">
        <item name="android:drawableRight">@drawable/ic_mine_icon_front</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/color_363636</item>
        <item name="android:textSize">@dimen/dp_14</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_height">@dimen/dp_72</item>
        <item name="android:layout_marginStart">@dimen/dp_16</item>
        <item name="android:layout_marginEnd">@dimen/dp_16</item>
    </style>

    <style name="textView_setting_tittle">
        <item name="android:textColor">@color/color_979797</item>
        <item name="android:textSize">@dimen/dp_12</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="LinearLayout_edit_address">
        <item name="android:layout_marginStart">@dimen/dp_16</item>
        <item name="android:layout_marginEnd">@dimen/dp_16</item>
        <item name="android:minHeight">@dimen/dp_52</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="textView_edit_address_tittle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/color_363636</item>
        <item name="android:textSize">@dimen/dp_14</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="textView_classify_course">
        <item name="android:drawableRight">@mipmap/course_icon_down</item>
        <item name="android:drawablePadding">0dp</item>
        <item name="android:padding">@dimen/dp_10</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <!--<item name="android:layout_weight">1</item>-->
        <item name="android:textColor">@color/color_363636</item>
        <item name="android:textSize">@dimen/dp_12</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="editText_edit_address_content">
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/dp_14</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="textView_order_count">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/color_979797</item>
        <item name="android:textSize">@dimen/dp_12</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="textView_order_count_red" parent="textView_order_count">
        <item name="android:textColor">@color/FF4F00</item>
    </style>

    <style name="textView_home_garden">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingBottom">@dimen/dp_4</item>
        <item name="android:paddingLeft">@dimen/dp_10</item>
        <item name="android:paddingRight">@dimen/dp_10</item>
        <item name="android:paddingTop">@dimen/dp_4</item>
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/color_636363</item>
        <item name="android:textSize">@dimen/dp_12</item>
    </style>

    <style name="flow_dialog">
        <item name="android:windowBackground">@color/albumTransparent</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowAnimationStyle">@style/BottomAnimationPicker</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.3</item>


    </style>

    <style name="RadingStyle" parent="@android:style/Widget.Holo.RatingBar.Indicator">
        <!-- 定义星星图片 -->
        <item name="android:progressDrawable">@drawable/layer_live_rating_bar</item>
        <!-- 根据自定义星星图片的大小,设置相应的值,否则可能显示不全 -->
        <item name="android:numColumns">10</item>
        <!--<item name="android:height">30dp</item>-->
        <!--<item name="android:width">30dp</item>-->
    </style>

</resources>
