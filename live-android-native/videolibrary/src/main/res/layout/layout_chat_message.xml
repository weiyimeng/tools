<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/fl_chat_list"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:background="@drawable/bg_chat_radius_8">

            <TextView
                android:id="@+id/tv_onlyTeacher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/selector_bg_onlyteacher"
                android:paddingBottom="2dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="2dp"
                android:text="仅看老师"
                android:textColor="@color/white"
                android:textSize="12dp" />

            <android.support.v4.widget.SwipeRefreshLayout
                android:id="@+id/refreshLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_onlyTeacher"
                android:paddingBottom="50dp">

                <com.haoke91.baselibrary.recycleview.WrapRecyclerView
                    android:id="@+id/rv_chat_message"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="@dimen/dp_6" />
            </android.support.v4.widget.SwipeRefreshLayout>
        </RelativeLayout>

        <ImageView
            android:id="@+id/iv_chat_close"
            android:layout_width="@dimen/dp_12"
            android:layout_height="@dimen/dp_62"
            android:layout_centerVertical="true"
            android:layout_gravity="left|center_vertical"
            android:background="@drawable/bg_radius8_left_right"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_enter_arrow" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_chat_open"
        android:layout_width="@dimen/dp_12"
        android:layout_height="@dimen/dp_62"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/bg_radius8_left_right"
        android:src="@drawable/ic_back_arrow"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/ll_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/fl_chat_list"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/bg_trans_radius25"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_input"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:gravity="left|center_vertical"
            android:hint="@string/say_something"
            android:paddingLeft="20dp"
            android:textSize="12dp" />

        <View
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:background="@color/line" />

        <ImageView
            android:id="@+id/iv_flower"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_weight="1"
            android:padding="2dp"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_flower" />

        <ImageView
            android:id="@+id/iv_like"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_weight="1"
            android:padding="2dp"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_like" />
    </LinearLayout>
</RelativeLayout>
