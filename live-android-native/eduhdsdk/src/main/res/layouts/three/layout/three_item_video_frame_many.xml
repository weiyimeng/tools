<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#00000000">

    <RelativeLayout
        android:id="@+id/rel_video_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/bg_video_back"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/three_gift_num_bg"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/img_video_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:scaleType="centerInside"
            android:src="@drawable/three_zhanwei_student" />

        <RelativeLayout
            android:id="@+id/rel_group"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true">

            <com.eduhdsdk.ui.MySurfaceView
                android:id="@+id/sf_video"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignWithParentIfMissing="true"
                android:background="#00000000"
                android:layout_centerInParent="true" />

             <View
                 android:layout_width="wrap_content"
                 android:layout_height="25dp"
                 android:layout_alignParentBottom="true"
                 android:background="@drawable/three_jianbian" />

            <RelativeLayout
                android:id="@+id/lin_name_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="2px"
                android:layout_marginLeft="6px"
                android:layout_marginRight="6px"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ll_mic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/img_mic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/three_icon_sound" />

                    <com.eduhdsdk.tools.VolumeView
                        android:id="@+id/volume"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_draw"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/img_pen"
                    android:layout_toRightOf="@+id/ll_mic"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <com.eduhdsdk.tools.CircleView
                        android:id="@+id/cv_draw"
                        android:layout_width="14dp"
                        android:layout_height="14dp" />

                    <com.eduhdsdk.ui.AutoFitTextView
                        android:id="@+id/txt_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5px"
                        android:maxEms="8"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:lines="1"
                        android:text="@string/teacher"
                        android:textColor="@color/white"
                        android:textSize="10dp" />
                </LinearLayout>


                <ImageView
                    android:id="@+id/img_pen"
                    android:layout_width="wrap_content"
                    android:layout_height="14dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/three_icon_shouquan"
                    android:visibility="gone"/>

            </RelativeLayout>

            <ImageView
                android:id="@+id/img_hand_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="6px"
                android:layout_marginTop="6px"
                android:scaleType="fitCenter"
                android:src="@drawable/icon_hand"
                android:visibility="gone"/>


            <LinearLayout
                android:id="@+id/lin_gift"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginLeft="6px"
                android:layout_marginTop="6px">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <com.eduhdsdk.ui.AutoFitTextView
                        android:id="@+id/txt_gift_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/three_item_video_trophy_bg"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:paddingRight="5dp"
                        android:text="0"
                        android:textColor="@color/txt_gift_num"
                        android:textSize="8dp"
                        android:visibility="visible"/>

                    <ImageView
                        android:id="@+id/icon_gif"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_centerVertical="true"
                        android:scaleType="fitCenter"
                        android:src="@drawable/three_icon_trophy"
                        android:visibility="visible"/>
                </RelativeLayout>
            </LinearLayout>

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/re_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_student_press_home_button"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@color/nothing"
                android:gravity="center"
                android:paddingBottom="4dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="4dp"
                android:text="@string/background"
                android:textColor="@color/white"
                android:textSize="10dp" />

        </RelativeLayout>

        <View
            android:id="@+id/view_choose_selected"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/three_shape_choose_selected_bg"
            android:visibility="gone" />
    </RelativeLayout>

</LinearLayout>
