<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/three_popup_window_course_bg"
    android:orientation="vertical">

    <include layout="@layout/three_popup_title_layout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="7px"
            android:layout_marginLeft="7px"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_course_library"
                android:layout_width="100px"
                android:layout_height="55px"
                android:orientation="horizontal"
                android:background="@drawable/three_selector_library_default"
                android:gravity="center"
                android:paddingRight="5px"
                android:paddingLeft="5px">
                <View
                    android:id="@+id/view_courselibrary_point"
                    android:layout_width="5px"
                    android:layout_height="5px"
                    android:background="@drawable/three_shape_popou_course_point_select"/>
                <TextView
                    android:id="@+id/tv_courselibrary_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5px"
                    android:text="@string/doclist"
                    android:textColor="@color/three_popup_student_name_color"
                    android:textSize="12px"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_media"
                android:layout_width="100px"
                android:layout_height="55px"
                android:layout_marginTop="20px"
                android:orientation="horizontal"
                android:background="@drawable/three_selector_library_select"
                android:gravity="center"
                android:paddingRight="5px"
                android:paddingLeft="5px">
                <View
                    android:id="@+id/view_media_point"
                    android:layout_width="5px"
                    android:layout_height="5px"
                    android:background="@drawable/three_shape_popou_course_point_default"/>

                <TextView
                    android:id="@+id/tv_media_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5px"
                    android:text="@string/medialist"
                    android:textColor="@color/white"
                    android:textSize="12px" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="7px"
            android:orientation="vertical">


            <include
                android:id="@+id/ll_course_list"
                layout="@layout/three_popup_course_list_layout" />

            <include
                android:id="@+id/ll_media_list"
                layout="@layout/three_popup_media_list_layout"
                android:visibility="gone" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
