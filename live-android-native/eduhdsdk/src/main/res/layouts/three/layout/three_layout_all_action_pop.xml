<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/three_popup_window_bg">

    <include
        android:id="@+id/re_bar"
        layout="@layout/three_popup_title_layout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="7px"
        android:background="@drawable/three_popup_window_bg_centent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:paddingTop="10px">

            <LinearLayout
                android:id="@+id/ll_mute"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_mute"
                    android:layout_width="40px"
                    android:layout_height="40px"
                    android:scaleType="fitXY"
                    android:src="@drawable/three_jingyin_default" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10px"
                    android:text="@string/mute_all"
                    android:textColor="@color/three_color_chose_number"
                    android:textSize="14px" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_unmute"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_unmute"
                    android:layout_width="40px"
                    android:layout_height="40px"
                    android:scaleType="fitXY"
                    android:src="@drawable/three_button_talk_all" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10px"
                    android:text="@string/unmute_all"
                    android:textColor="@color/three_color_chose_number"
                    android:textSize="14px" />
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:paddingBottom="10px">

            <LinearLayout
                android:id="@+id/ll_send_gift"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_send_gift"
                    android:layout_width="40px"
                    android:layout_height="40px"
                    android:scaleType="fitXY"
                    android:src="@drawable/three_jiangli_default" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10px"
                    android:text="@string/send_gift_all"
                    android:textColor="@color/three_color_chose_number"
                    android:textSize="14px" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_all_recovery"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_all_recovery"
                    android:layout_width="40px"
                    android:layout_height="40px"
                    android:scaleType="fitXY"
                    android:src="@drawable/three_fuwei_default" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10px"
                    android:text="@string/recovery_teacher"
                    android:textColor="@color/three_color_chose_number"
                    android:textSize="14px" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>
