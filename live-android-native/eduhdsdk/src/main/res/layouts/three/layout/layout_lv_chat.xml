<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <TextView
        android:id="@+id/tv_onlyTeacher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/bg_strokewhite_radius4"
        android:paddingBottom="2dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="2dp"
        android:text="仅看老师"
        android:visibility="gone"
        android:textColor="@color/white"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/tv_raiseHnads"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="5dp"
        android:background="@drawable/bg_strokewhite_radius4"
        android:paddingBottom="2dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="2dp"
        android:text="举手"
        android:layout_marginRight="10dp"
        android:textColor="@color/white"
        android:textSize="12dp" />
    <ListView
        android:id="@+id/lv_chat"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tv_raiseHnads"
        android:layout_above="@+id/ll_bottom_msg"
        android:layout_marginTop="5dp"
        android:divider="@null"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:scrollbars="vertical">

    </ListView>

    <LinearLayout
        android:id="@+id/ll_bottom_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:gravity="center"
        android:background="@drawable/bg_solidewhite_radius_20">

        <TextView
            android:id="@+id/tv_sayMsg"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_weight="4"
            android:hint="说点什么"
            android:textSize="12dp"/>
        <View
            android:layout_width="1px"
            android:layout_height="20dp"
            android:background="#D9D9D9"
            android:layout_gravity="center_vertical"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/iv_send_flower"
            android:layout_width="0dp"
            android:layout_height="34dp"
            android:padding="4dp"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_flower"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/iv_send_like"
            android:layout_width="0dp"
            android:layout_height="34dp"
            android:padding="4dp"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_like"
            android:visibility="gone"/>

    </LinearLayout>

</RelativeLayout>
