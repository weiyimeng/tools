<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/title_bar"
        layout="@layout/three_action_bar_one" />

    <RelativeLayout
        android:id="@+id/rl_web"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_bar">

        <LinearLayout
            android:id="@+id/ll_video_whiteboard"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/ll_wb_container"
                android:layout_width="30dp"
                android:layout_height="wrap_content">

                <FrameLayout
                    android:id="@+id/wb_container"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/lin_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <include
                    android:id="@+id/vdi_teacher"
                    layout="@layout/three_item_video_frame_many"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <View
                    android:id="@+id/three_view_one"
                    android:layout_width="wrap_content"
                    android:layout_height="10dp" />

                <include
                    android:id="@+id/vdi_stu_in_sd"
                    layout="@layout/three_item_video_frame_many"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom" />

            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10px"
        android:layout_marginLeft="10px"
        android:layout_marginRight="10px">

        <!--mp3播放界面-->
        <include
            android:id="@+id/lin_audio_control"
            layout="@layout/layout_media_control"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="60px"
            android:visibility="gone" />

        <!--MP3图标-->
        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/img_disk"
            android:layout_width="85px"
            android:layout_height="85px"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:src="@drawable/play_mp3_gif"
            android:visibility="gone" />

    </RelativeLayout>

    <!--播放界面-->
    <FrameLayout
        android:id="@+id/video_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!--白板全屏右下角视频界面-->
    <include
        android:id="@+id/rel_fullscreen_videoitem"
        layout="@layout/fullscreen_videoitem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:visibility="gone" />

    <!--laoding界面-->
    <include
        android:id="@+id/re_laoding"
        layout="@layout/layout_room_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <!--回放界面-->
    <RelativeLayout
        android:id="@+id/re_play_back"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <!--回放bar界面-->
        <include
            android:id="@+id/rel_play_back_bar"
            layout="@layout/play_back_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!--回放界面 控制条-->
        <include
            android:id="@+id/rel_play_back"
            layout="@layout/layout_playback"
            android:layout_width="match_parent"
            android:layout_height="70px"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="-100px"
            android:layout_marginLeft="20px"
            android:layout_marginRight="20px" />

    </RelativeLayout>

</RelativeLayout>
