<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/ll_put"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/three_shape_popup_chat_input_bg"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10px"
            android:layout_marginLeft="20px"
            android:layout_marginRight="20px"
            android:layout_marginTop="10px"
            android:layout_toLeftOf="@+id/txt_send"
            android:background="@drawable/round_chat_input_back"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/lin_input_chat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/iv_photo"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="51px"
                        android:gravity="center"
                        android:padding="2dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/three_icon_pic"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/iv_chat"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="12px"
                        android:gravity="center"
                        android:padding="3dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/three_icon_expression" />

                    <ImageView
                        android:id="@+id/iv_broad"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="12px"
                        android:gravity="center"
                        android:padding="3dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/icon_keyboard"
                        android:visibility="gone" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="24dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="40dp"
                        android:background="#E0D3FF" />

                    <EditText
                        android:id="@+id/edt_input_chat"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginRight="40dp"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:hint="@string/say_something"
                        android:imeOptions="flagNoExtractUi"
                        android:lines="1"
                        android:paddingLeft="20px"
                        android:textColor="@color/three_color_chat_input"
                        android:textColorHint="@color/three_color_chat_input_hint"
                        android:textSize="14dp" />

                </RelativeLayout>

            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/txt_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:background="@drawable/bg_ffc200_radius2"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="5dp"
            android:text="@string/send"
            android:layout_marginRight="15dp"
            android:textColor="@color/color_chat_send"
            android:textSize="14dp" />
    </RelativeLayout>

    <GridView
        android:id="@+id/chart_face_gv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:horizontalSpacing="10dp"
        android:numColumns="14"
        android:padding="10dp"
        android:verticalSpacing="10dp"
        android:visibility="gone" />

</LinearLayout>



