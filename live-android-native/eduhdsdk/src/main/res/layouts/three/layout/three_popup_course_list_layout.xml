<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/three_popup_window_course_bg_centent">

    <include
        android:id="@+id/popup_file_title_layout"
        layout="@layout/three_popup_course_media_title_layout" />

    <LinearLayout
        android:id="@+id/ll_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="50px"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="10px"
        android:gravity="center_vertical"
        android:orientation="horizontal">


            <TextView
                android:id="@+id/popup_take_photo"
                android:layout_width="130px"
                android:layout_height="45px"
                android:background="@drawable/three_button_send_default"
                android:gravity="center"
                android:text="@string/uploadphoto"
                android:textColor="@color/popup_window_choose_photo_color"
                android:textSize="14px" />


            <TextView
                android:id="@+id/popup_choose_photo"
                android:layout_width="130px"
                android:layout_height="45px"
                android:layout_marginLeft="20px"
                android:background="@drawable/three_button_send_default"
                android:gravity="center"
                android:text="@string/select_picture_from_album"
                android:textColor="@color/popup_window_choose_photo_color"
                android:textSize="14px" />

    </LinearLayout>

    <ListView
        android:id="@+id/lv_course_data"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/ll_temp"
        android:layout_below="@id/popup_file_title_layout"
        android:layout_marginBottom="15px"
        android:layout_marginLeft="49px"
        android:layout_marginRight="49px"
        android:layout_marginTop="15px"
        android:divider="@color/nothing"
        android:dividerHeight="10px"
        android:scrollbars="none" />

</RelativeLayout>
