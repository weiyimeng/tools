<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <org.tkwebrtc.SurfaceViewRenderer
        android:id="@+id/fullscreen_sf_video"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignWithParentIfMissing="true"
        android:layout_centerInParent="true" />

    <ImageView
        android:id="@+id/fullscreen_bg_video_back"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/three_bg_video_back"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/fullscreen_img_video_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:scaleType="centerInside"
        android:src="@drawable/three_zhanwei_student"
        android:visibility="gone"/>
</RelativeLayout>