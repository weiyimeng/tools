<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/up_arr"
        android:layout_width="20px"
        android:layout_height="20px"
        android:src="@drawable/three_up_arr"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/down_arr"
        android:layout_width="20px"
        android:layout_height="20px"
        android:layout_alignParentBottom="true"
        android:src="@drawable/three_down_arr"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/right_arr"
        android:layout_width="20px"
        android:layout_height="20px"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/three_right_arr"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/lin_center"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_above="@id/down_arr"
        android:layout_below="@id/up_arr"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/right_arr"
        android:background="@drawable/three_shape_student_video_popup_backgroud"
        android:orientation="vertical"
        android:padding="5dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="0px"
            android:layout_weight="1">

            <LinearLayout
                android:id="@+id/lin_audio_control"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginTop="2dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_audio"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/three_icon_close_audio" />

                <TextView
                    android:id="@+id/txt_audio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:gravity="center"
                    android:text="@string/close_audio"
                    android:textColor="@color/white"
                    android:textSize="11sp" />
            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="0px"
            android:layout_weight="1">

            <LinearLayout
                android:id="@+id/lin_video_control"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_camera"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/three_icon_close_vidio" />

                <TextView
                    android:id="@+id/txt_camera"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:gravity="center"
                    android:text="@string/video_off"
                    android:textColor="@color/white"
                    android:textSize="11sp" />
            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/lin_plit_screen"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_marginTop="2dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_plit_screen"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:scaleType="fitCenter"
                android:src="@drawable/three_icon_speech" />

            <TextView
                android:id="@+id/txt_plit_screen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:gravity="center"
                android:text="@string/plitscreen"
                android:textColor="@color/white"
                android:textSize="11sp" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>